<% content_for :title, "Tickets" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tickets</h1>
    <%= link_to "New ticket", new_ticket_path, data: {turbo_frame: dom_id(@new_ticket)}, class: "..." %>
  </div> 
  <%= turbo_frame_tag @new_ticket %>

  <div id="tickets" class="min-w-full">
    <% if @tickets&.any? %>
      <% @tickets.each do |ticket| %>
        <%= render ticket %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No tickets found.</p>
    <% end %>
  </div>
</div>
